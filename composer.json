{
    "name": "akrabat/openwhisk-client-php",
    "description": "A client access library for the OpenWhisk API",
    "license": "Apache-2.0",
    "keywords": [
        "openwhisk"
    ],
    "support": {
        "docs": "https://github.com/akrabat/openwhisk-client-php",
        "issues": "https://github.com/akrabat/openwhisk-client-php/issues",
        "source": "https://github.com/akrabat/openwhisk-client-php",
        "slack": "http://slack.openwhisk.org/"
    },
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "OpenWhisk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenWhiskTest\\": "test/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "@phpcs",
            "@phpunit"
        ],
        "phpunit": "php vendor/phpunit/phpunit/phpunit",
        "phpcs": "php vendor/bin/phpcs -p"
    }
}
